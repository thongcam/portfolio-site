---
import { Image } from "astro:assets";
import type { NavLinkType } from "@customTypes/navLinkType";
import ExternalLink from "/public/icons/External link.svg";
interface Props extends NavLinkType {}
const { title, url } = Astro.props;
---

<li
  class="flex-initial w-full flex flex-row content-center items-center gap-3 md:gap-2 hover:underline hover:decoration-1 hover:decoration-dark-blue hover:text-dark-blue/90 underline-offset-4 md:w-auto"
>
  <a
    href={url}
    tabindex="0"
    target={url.startsWith("http") ? "__blank" : ""}
    class="relative flex flex-row flex-wrap w-full ps-3 py-6 md:px-0 md:py-0 items-center justify-between md:gap-2 md:after:absolute md:after:inset-[-15px]"
    >{title}

    {
      url.startsWith("http") && (
        <Image
          src={ExternalLink}
          width={ExternalLink.width}
          height={ExternalLink.height}
          alt={"External link to " + title}
          class:list={"s-[1rem] md:s-[0.8rem] w-auto pe-3 md:pe-0"}
          loading={"eager"}
        />
      )
    }
  </a>
</li>
