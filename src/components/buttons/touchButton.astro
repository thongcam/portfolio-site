---
interface Props {
  imgsrc: ImageMetadata;
  alttext: string;
  buttonlabel: string;
}

const { imgsrc, buttonlabel, alttext } = Astro.props;
---

<button
  role="button"
  aria-label={buttonlabel}
  aria-disabled="false"
  aria-pressed="false"
  class="relative"
>
  <img
    src={imgsrc.src}
    alt={alttext}
    height={imgsrc.height}
    width={imgsrc.width}
  />
</button>

<style>
  button:after {
    --extend-clickable-area-by: -15px;
    content: "";
    position: absolute;
    top: var(--extend-clickable-area-by);
    bottom: var(--extend-clickable-area-by);
    left: var(--extend-clickable-area-by);
    right: var(--extend-clickable-area-by);
  }
</style>
